{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    "typeRoots": [
      "./node_modules/@types",
      "src/@types"
    ],
    "noImplicitAny": false
  },
  "include": [
    "src/**/*",
    "src/@types"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
